{
  "manifest_version": 2,
  "name": "sniff-chrome-extension",
  "version": "0.0.1",
  "background": {
    "scripts": [
      "shared.js",
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_title": "Sniff",
    "default_popup": "popup.html"
  },
  "permissions": [
    "declarativeContent",
    "tabs",
    "activeTab",
    "contextMenus",
    "storage"
  ],
  "optional_permissions": [
    "https://*.amazonaws.com/*"
  ],
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
